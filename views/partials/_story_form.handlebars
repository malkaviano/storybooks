<div class="row">
  <div class="input-field">
    <input type="text" name="title" value="{{story.title}}">
    <label for="title">Title</label>
  </div>
</div>
<div class="row">
  <div class="input-field">
    <select name="status" id="status">
      <option value="public" {{selected story.status public}}>Public</option>
      <option value="private" {{selected story.status private}}>Private</option>
      <option value="unpublished" {{selected story.status unpublished}}>Unpublished</option>
    </select>
    <label for="status">Status</label>
  </div>
</div>
<div class="row">
  <p>
    <input type="checkbox" name="allowComments" id="allowComments" class="filled-in" checked>
    <label for="allowComments">Allow Comments</label>
  </p>
</div>
<div class="row">
  <div class="input-field">
    <h5>Tell Us Your Story</h5>
    <textarea name="description" id="description" cols="30" rows="30"></textarea>
  </div>
</div>

<button class="btn waves-effect waves-light" type="submit" name="action">
  Submit <i class="fa fa-send right"></i>
</button>

<a class="btn waves-effect waves-light" href="/stories">
  Back
</a>