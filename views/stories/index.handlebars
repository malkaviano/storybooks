<h1>
  Stories 
  {{#if session.username}}
  <a class="btn-floating btn-large waves-effect waves-light red" href="/stories/new">
    <i class="fa fa-plus"></i>
  </a>
  {{/if}}
</h1>

<div class="row">
  {{#each stories}}
  <div class="col s12 m6 l4">
    <div class="card">
      {{#if (showEditIcon ../session.userId author.id)}}
      <div class="card-image">
        <a href="/stories/{{id}}/edit" class="btn-floating halfway-fab red">
          <i class="fa fa-pencil"></i>
        </a>
      </div>
      {{/if}}
      <div class="card-content center-align">
        <h5>{{title}}</h5>
        <p class="story-text">{{truncate (htmlToText description) 150}}</p>
        <br>
        <div class="chip">
          <a href="/stories/user/{{author.id}}">
            <img src="{{author.image}}" alt="">{{author.name}}
          </a>
        </div>
      </div>
      <div class="card-action center-align">
        <a class="btn grey" href="/stories/{{id}}">READ MORE</a>
      </div>
    </div>
  </div>
  {{else}}
  <p>No Stories Found!</p>
  {{/each}}
</div>