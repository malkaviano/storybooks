<h1>Stories</h1>

<div class="row">
  {{#each stories}}
  <div class="col s12 m6 l4">
    <div class="card">
      <div class="card-image">
        <a href="/stories/edit/{{_id}}" class="btn-floating halfway-fab red">
          <i class="fa fa-pencil"></i>
        </a>
      </div>
      <div class="card-content center-align">
        <h5>{{title}}</h5>
        <p class="story-text">{{striptags (truncate description 150)}}</p>
        <br>
        <div class="chip">
          <img src="{{author.image}}" alt="">{{author.name}}
        </div>
      </div>
      <div class="card-action center-align">
        <a class="btn grey" href="/stories/{{_id}}">READ MORE</a>
      </div>
    </div>
  </div>
  {{else}}
  <p>No Stories Found!</p>
  {{/each}}
</div>