<div class="row">
  <div class="col s12 m8">
    <h3>{{story.title}}</h3>
    <div class="card story">
      <span class="card-title">{{story.date}}</span>
      {{{story.description}}}
    </div>
  </div>
  <div class="col s12 m4">
    <div class="card center-align">
      <div class="card-content">
        <span class="card-title">{{story.user.name}}</span>
        <img src="{{story.user.image}}" alt="Avatar" class="circle responsive-img">
      </div>
      <div class="card-action">
        <a href="/stories/user/{{story.user._id}}">More From {{story.user.name}}</a>
      </div>
    </div>
  </div>
</div>